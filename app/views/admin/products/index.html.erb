<div class="span12">
  <div class="group">
    <H2>Admin products list</H2>
  </div>
  <%= link_to 'New Produce', new_admin_product_path, class: 'btn btn-default' %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Image</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <% if product.image.exists? %>
            <td><%= image_tag product.image.url(:thumb) %></td>
          <% else %>
            <td>Please upload image</td>
          <% end %>
          <td><%= link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-info' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
 </div>

<div class="span12">
  <div class="group">
    <H2>User lists</H2>
  </div>
  <table class="table">
    <thead>
      <tr>
        <td>Name</td>
        <td>Is Admin</td>
        <td>Change role to admin</td>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.admin? %></td>
          <% if user.admin? %>
            <td><%= 'No need' %></td>
          <%  else %>
            <td><%= render partial: 'cahnge_role_form', locals: { user: user } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
 </div>

