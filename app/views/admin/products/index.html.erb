<div class="span12">
  <div class="group">
    <H2>User lists</H2>
  </div>
  <table class="table">
    <thead>
      <tr>
        <td>Name</td>
        <td>Is Admin</td>
        <td>Change role to admin</td>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.admin? %></td>
          <% if user.admin? %>
            <td><%= 'No need' %></td>
          <%  else %>
            <td><%= render partial: 'cahnge_role_form', locals: { user: user } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
 </div>

